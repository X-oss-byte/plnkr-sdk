{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "diagnostics": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "lib": ["dom", "scripthost", "es2015", "es2016", "es2017", "es2018"],
        "module": "es2015",
        "moduleResolution": "node",
        "noEmit": false,
        "noEmitHelpers": false,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noResolve": false,
        "outDir": "dist",
        "target": "es5",
        "paths": {
            "*.json": ["json.d.ts"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
